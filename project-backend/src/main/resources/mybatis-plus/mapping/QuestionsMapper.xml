<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sapiece.question.mapper.QuestionMapper">
    <update id="batchUpdateIsSelected">
        update questions set is_selected=#{isSelected} where question_id in
        <foreach collection="questionIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>
</mapper>